<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to remove actions"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lstActions"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="300dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select feature!"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnActiveLivenessDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Active Liveness Detection" />

    <Button
        android:id="@+id/btnPassiveLivenessDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Passive Liveness Detection" />

    <Button
        android:id="@+id/btnActivePassiveLivenessDetection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Active-Passive Liveness Detection" />

    <Button
        android:id="@+id/btnPassiveLivenessDetectionFromImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="Passive Liveness Detection from Image" />
</LinearLayout>